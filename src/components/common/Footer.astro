---
// Obtener el año actual para el copyright
const currentYear = new Date().getFullYear();

// Enlaces del sitio - Simplificados para evitar sobrecarga
const siteLinks = [
  { name: "Inicio", url: "/" },
  { name: "Generar Recetas", url: "/recetas" },
  { name: "Mis Recetas", url: "/mis-recetas" },
];

// Características principales - Ampliadas a seis características
const features = [
  "Recetas personalizadas",
  "Opciones sin electricidad",
  "Ingredientes alternativos",
  "Información nutricional",
  "Recetas guardables",
  "Filtros dietéticos"
];
---

<footer class="bg-green-800 text-white py-8 mt-auto w-full">
  <div class="container mx-auto px-4">
    <!-- Estructura más simple con mayor compatibilidad -->
    <div class="flex flex-col lg:flex-row gap-8 mb-6">
      <!-- Nombre y descripción - Más compacto -->
      <div class="lg:w-1/3">
        <div class="flex items-center mb-2">
          <h2 class="text-xl font-bold text-white">VitaSpoon</h2>
        </div>
        <p class="text-green-100 text-sm mb-4">
          Tu asistente de cocina inteligente que genera recetas personalizadas.
        </p>
        
        <!-- Iconos sociales -->
        <div class="flex space-x-3 mb-2">
          <a href="https://github.com/thejasondev/vitaspoon" target="_blank" rel="noopener" class="text-green-200 hover:text-white">
            <i class="ri-github-fill text-lg"></i>
          </a>
        </div>
      </div>
      
      <!-- Navegación -->
      <div class="lg:w-1/3">
        <h3 class="text-lg font-semibold mb-2 text-green-100">Enlaces rápidos</h3>
        <ul class="grid grid-cols-1 gap-2">
          {siteLinks.map(link => (
            <li>
              <a href={link.url} class="text-green-200 hover:text-white text-sm flex items-center">
                <i class="ri-arrow-right-s-line mr-1"></i>
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Características -->
      <div class="lg:w-1/3">
        <h3 class="text-lg font-semibold mb-2 text-green-100">Características</h3>
        <ul class="grid grid-cols-1 sm:grid-cols-2 gap-2">
          {features.map(feature => (
            <li class="flex items-center text-green-200 text-sm">
              <i class="ri-check-line mr-1 text-emerald-400"></i>
              {feature}
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <!-- Línea divisoria -->
    <div class="border-t border-green-700 my-4"></div>
    
    <!-- Copyright simple y funcional -->
    <div class="flex flex-col sm:flex-row justify-between items-center text-xs">
      <p class="text-green-200 mb-2 sm:mb-0">
        &copy; {currentYear} VitaSpoon. Todos los derechos reservados.
      </p>
      <div class="text-green-200 flex items-center">
        <span>Desarrollado por</span>
        <a href="https://thejasondev.vercel.app" class="ml-1 text-emerald-300 hover:text-white">
          @thejasondev
        </a>
      </div>
    </div>
  </div>
</footer>
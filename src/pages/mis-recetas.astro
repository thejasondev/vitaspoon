---
import AppLayout from '../layouts/AppLayout.astro';
import { SavedRecipesPage } from '../components/pages';
// Eliminamos importaciones de componentes de receta y tipos no necesarios aqu√≠
---

<AppLayout 
  title="Mis Recetas Guardadas | VitaSpoon"
  description="Accede a todas tus recetas guardadas en un solo lugar. Organiza y consulta tus creaciones favoritas de VitaSpoon."
  image="/images/VitaSpoon.png"
>
	<section class="mt-20 py-12 px-4 max-w-7xl mx-auto">
    <div class="text-center mb-10">
      <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-green-800 mb-4 leading-tight">
        Mis <span class="text-emerald-600">Recetas</span> Guardadas
      </h1>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        Todas tus recetas guardadas en un solo lugar. Consulta, cocina y disfruta 
        de tus creaciones favoritas cuando quieras.
      </p>
    </div>

    <SavedRecipesPage client:load />
  </section>
</AppLayout> 
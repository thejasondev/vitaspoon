---
interface Props {
  number: string;
  title: string;
  description: string;
}

const { number, title, description } = Astro.props;
---

<div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
  <div class="w-16 h-16 bg-emerald-100 rounded-full flex items-center justify-center mb-5 mx-auto">
    <span class="text-emerald-600 text-2xl font-bold">{number}</span>
  </div>
  <h3 class="text-lg font-semibold text-emerald-700 mb-2 text-center">{title}</h3>
  <p class="text-gray-600 text-center">{description}</p>
</div> 
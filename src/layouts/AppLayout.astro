---
import Layout from "./Layout.astro";
import { ToastProvider, RecipeDbProvider } from "../components/providers";

interface Props {
	title?: string;
	description?: string;
	image?: string;
	canonicalURL?: string;
}

const { 
	title,
	description,
	image,
	canonicalURL
} = Astro.props;
---

<Layout 
  title={title}
  description={description}
  image={image}
  canonicalURL={canonicalURL}
>
  <RecipeDbProvider client:idle>
    <ToastProvider client:idle>
      <slot />
    </ToastProvider>
  </RecipeDbProvider>
</Layout> 
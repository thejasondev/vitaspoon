<script>
  // Función para animar las tarjetas
  function animateStepCards() {
    // Remueve la clase animate-fade-in de todas las tarjetas
    const allStepCards = document.querySelectorAll('.step-card');
    allStepCards.forEach(card => {
      card.classList.remove('animate-fade-in');
      card.classList.add('opacity-0');
    });
    
    // Animación para móvil
    if (window.innerWidth < 768) {
      const stepCards = document.querySelectorAll('.step-card');
      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.remove('opacity-0');
            entry.target.classList.add('animate-fade-in');
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.2 });
      
      stepCards.forEach((card, index) => {
        setTimeout(() => {
          observer.observe(card);
        }, 100 * index);
      });
    }
    // Animación para desktop
    else {
      const stepCards = document.querySelectorAll('.step-card');
      stepCards.forEach((card, index) => {
        setTimeout(() => {
          card.classList.remove('opacity-0');
          card.classList.add('animate-fade-in');
        }, 150 * index);
      });
    }
  }

  // Inicializar las animaciones cuando el DOM esté listo
  document.addEventListener('DOMContentLoaded', animateStepCards);
  
  // Inicializar también cuando hay transiciones de página con Astro
  document.addEventListener('astro:page-load', animateStepCards);
  
  // Reinicializar cuando la página termina de cargarse
  window.addEventListener('load', animateStepCards);
  
  // Reinicializar cuando hay actualización parcial del DOM
  document.addEventListener('astro:after-swap', animateStepCards);
</script>

<style>
  /* Animaciones mejoradas para las tarjetas */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  @keyframes scaleIn {
    from { transform: scale(0.9); opacity: 0; }
    to { transform: scale(1); opacity: 1; }
  }
  
  .step-card {
    transform: translateY(20px);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }
  
  .opacity-0 {
    opacity: 0;
  }
  
  .animate-fade-in {
    animation: fadeIn 0.6s forwards;
  }
  
  .step-marker {
    position: relative;
    animation: scaleIn 0.5s 0.2s forwards;
    opacity: 0;
  }
  
  /* Efecto de pulso para los marcadores de paso */
  .step-marker::after {
    content: '';
    position: absolute;
    top: -4px;
    left: -4px;
    right: -4px;
    bottom: -4px;
    border-radius: 50%;
    background: linear-gradient(to right, rgba(52, 211, 153, 0.3), rgba(16, 185, 129, 0.3));
    z-index: -1;
    animation: pulse 2s infinite;
  }
  
  @keyframes pulse {
    0% { transform: scale(1); opacity: 0.8; }
    70% { transform: scale(1.1); opacity: 0; }
    100% { transform: scale(1); opacity: 0; }
  }
  
  /* Mejora de hover para las tarjetas */
  .step-card > div:hover {
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }

  /* Asegurar que los elementos estén visibles después de las transiciones */
  ::view-transition-new(root) .step-card {
    animation: none;
    opacity: 1;
    transform: translateY(0);
  }
  
  ::view-transition-new(root) .step-marker {
    animation: none;
    opacity: 1;
  }
</style> 
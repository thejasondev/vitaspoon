---
// Obtener el año actual para el copyright
const currentYear = new Date().getFullYear();

// Enlaces del sitio - Simplificados para evitar sobrecarga
const siteLinks = [
  { name: "Inicio", url: "/" },
  { name: "Generar Recetas", url: "/recetas" },
  { name: "Mis Recetas", url: "/mis-recetas" },
];

// Características principales - Ampliadas a seis características
const features = [
  "Recetas personalizadas",
  "Opciones sin electricidad",
  "Ingredientes alternativos",
  "Información nutricional",
  "Recetas guardables",
  "Filtros dietéticos"
];
---

<footer class="bg-green-800 text-white py-8 w-full mt-auto">
  <div class="container mx-auto px-4">
    <!-- Estructura más simple con mayor compatibilidad -->
    <div class="flex flex-col lg:flex-row gap-8 mb-6">
      <!-- Nombre y descripción - Más compacto -->
      <div class="lg:w-1/3">
        <div class="flex items-center mb-2">
          <h2 class="text-xl font-bold text-white">VitaSpoon</h2>
        </div>
        <p class="text-green-100 text-sm mb-4">
          Tu asistente de cocina inteligente que genera recetas personalizadas.
        </p>
        
        <!-- Iconos sociales -->
        <div class="flex space-x-3 mb-2">
          <a href="https://github.com/thejasondev/vitaspoon" target="_blank" rel="noopener" class="text-green-200 hover:text-white transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Navegación -->
      <div class="lg:w-1/3">
        <h3 class="text-lg font-semibold mb-2 text-green-100">Enlaces rápidos</h3>
        <ul class="grid grid-cols-1 gap-2">
          {siteLinks.map(link => (
            <li>
              <a href={link.url} class="text-green-200 hover:text-white text-sm flex items-center transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                </svg>
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Características -->
      <div class="lg:w-1/3">
        <h3 class="text-lg font-semibold mb-2 text-green-100">Características</h3>
        <ul class="grid grid-cols-1 sm:grid-cols-2 gap-2">
          {features.map(feature => (
            <li class="flex items-center text-green-200 text-sm">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-emerald-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              {feature}
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <!-- Línea divisoria -->
    <div class="border-t border-green-700 my-4"></div>
    
    <!-- Copyright simple y funcional -->
    <div class="flex flex-col sm:flex-row justify-between items-center text-xs">
      <p class="text-green-200 mb-2 sm:mb-0">
        &copy; {currentYear} VitaSpoon. Todos los derechos reservados.
      </p>
      <div class="text-green-200 flex items-center">
        <span>Desarrollado por</span>
        <a href="https://thejasondev.vercel.app" class="ml-1 text-emerald-300 hover:text-white transition-colors">
          @thejasondev
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Asegurarse de que el footer se quede abajo */
  html, body {
    height: 100%;
    min-height: 100vh;
  }
  
  body {
    display: flex;
    flex-direction: column;
  }
  
  main {
    flex: 1 0 auto;
  }
  
  footer {
    flex-shrink: 0;
  }
</style>